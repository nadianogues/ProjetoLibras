<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tela_aprender">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtOpcoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@string/txtOpcoes"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtConsoante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="@string/txtConsoante"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtVogal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.2"
            android:gravity="center|center_horizontal"
            android:text="@string/txtVogal"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEscolhaTeclado"
            android:layout_width="424dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@string/txtEscolhaTeclado"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnQ" />

            <Button
                android:id="@+id/button2"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnW" />

            <Button
                android:id="@+id/button3"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnE" />

            <Button
                android:id="@+id/button4"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnR" />

            <Button
                android:id="@+id/button5"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnT" />

            <Button
                android:id="@+id/button6"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnY" />

            <Button
                android:id="@+id/button7"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnU" />

            <Button
                android:id="@+id/button9"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnI" />

            <Button
                android:id="@+id/button10"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnO" />

            <Button
                android:id="@+id/button11"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnP" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button37"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnA" />

            <Button
                android:id="@+id/button39"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnS" />

            <Button
                android:id="@+id/button40"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnD" />

            <Button
                android:id="@+id/button35"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnF" />

            <Button
                android:id="@+id/button41"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnG" />

            <Button
                android:id="@+id/button36"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnH" />

            <Button
                android:id="@+id/button34"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnJ" />

            <Button
                android:id="@+id/button38"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnK" />

            <Button
                android:id="@+id/button32"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnL" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_weight="0.33"
            android:gravity="top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button51"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnZ" />

            <Button
                android:id="@+id/button52"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnX" />

            <Button
                android:id="@+id/button53"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnC" />

            <Button
                android:id="@+id/button54"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnV" />

            <Button
                android:id="@+id/button56"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnB" />

            <Button
                android:id="@+id/button60"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnN" />

            <Button
                android:id="@+id/button58"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="@string/btnM" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>